- provide(:title, @title)
.row
  %aside.span4
    %section
      = image_tag @user.image_url(:thumb).to_s
      %h1= @user.name
      %span= link_to "view my profile", @user
      %span
        %b Posts:
        = @user.requests.count
    %section
      = render 'shared/stats'
      - if @users.any?
        .user_avatars
          - @users.each do |user|
            = image_tag user.image_url(:thumb).to_s
  .span8
    %h3= @title
    - if @users.any?
      %ul.users= render @users
      = will_paginate @users