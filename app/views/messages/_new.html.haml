%div{align: "center"}
  %b Send a Message to
  %br
    %br
      %br
      \!% puts "-----------------------------------\#{@message.inspect}" %>
      \!%= form_for(@message) do |f| %>
      \!%= f.label :Select_User_to_send_message %>
      \!%= f.collection_select :receiver_id, User.order(:name), :id, :name, include_blank: true %>
      \!%= f.label %>
      \!%= f.collection_select :user_id, User.order(:name), :id, :name, include_blank: true %>
      %br
        %br
          \!%= f.text_area :text, placeholder: "Enter text", align: "center" %>
          %br
            \!%= f.submit "Send", class: "btn btn-large btn-primary" %>
            \!% end %>