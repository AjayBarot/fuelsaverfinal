%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true } ) do |f|
  = devise_error_messages!
  %form{role: "form"}
    .form-group
      %label{for: "exampleInputName1"} Name:
      %br/
      = f.text_field :name, class: "form-control", placeholder: "Enter name", id: "exampleInputName1"
    .form-group
      %label{for: "exampleInputEmail1"} Email:
      %br/
      = f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Enter email", id: "exampleInputEmail1"
    .form-group
      %label{for: "exampleInputPassword1"} Password:
      %br/
      = f.password_field :password, class: "form-control", placeholder: "Enter password", id: "exampleInputPassword1"
    .form-group
      %label{for: "exampleInputPasswordConfirmation1"} Password_Confirmation:
      %br/
      = f.password_field :password_confirmation, class: "form-control", placeholder: "Enter password_confirmation", id: "exampleInputPasswordConfirmation1"
    .form-group
      %label{for: "exampleInputProfile_Image1"} Profile_Image:
      %br/
      = f.file_field :image, class: "form-control", placeholder: "Enter Profile_Image", id: "exampleInputProfile_Image1"
    .form-group
      %label{for: "exampleInputGender1"} Gender:
      %br/
      = f.text_field :gender, class: "form-control", placeholder: "Enter Gender", id: "exampleInputGender1"
    .form-group
      %label{for: "exampleInputCity1"} City:
      %br/
      = f.text_field :city, class: "form-control", placeholder: "Enter City", id: "exampleInputCity1"
    .form-group
      %label{for: "exampleYear_of_Birth1"} Date_of_Birth:
      %br/
      = f.text_field :year_of_birth, 'data-behaviour' => 'datepicker', class: "form-control", placeholder: "Enter Date_of_Birth", id: "exampleYear_of_Birth"
      :javascript
        $(document).ready(function(){
        $('[data-behaviour~=datepicker]').datepicker();
        })
    .form-group
      %label{for: "exampleProfession1"} Profession:
      %br/
      = f.text_field :profession, class: "form-control", placeholder: "Enter Profession", id: "exampleProfession1"
    .form-group
      %label{for: "examplePhone_no1"} Phone_no:
      %br/
      = f.text_field :phone_no,class: "form-control", placeholder: "Enter Phone_no", id: "examplePhone_no1"
    %div
      = f.submit "Sign up", class: "btn btn-large btn-primary"