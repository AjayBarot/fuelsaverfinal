%title Sign in
= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %form{role: "form"}
    .form-group
      %label{for: "exampleInputEmail1"} Email:
      %br/
      = f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Enter email", id: "exampleInputEmail1"
    .form-group
      %label{for: "exampleInputPassword1"} Password:
      %br/
      = f.password_field :password, class: "form-control", placeholder: "Password", id: "exampleInputPassword1"
    .checkbox
      %label
        - if devise_mapping.rememberable?
          = f.check_box :remember_me
          Remember me
    %br/
    = f.submit :Login, class: "btn btn-large btn-primary"
%br/
= render "devise/shared/links"